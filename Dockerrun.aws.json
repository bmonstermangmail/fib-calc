{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "bmonsterman/fib-calc-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "bmonsterman/fib-calc-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "bmonsterman/fib-calc-worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "bmonsterman/fib-calc-nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["client","server"]
        }
    ]
}